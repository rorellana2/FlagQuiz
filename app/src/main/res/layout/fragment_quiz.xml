<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.rorellana2.flagquiz.QuizActivityFragment"
    tools:showIn="@layout/activity_quiz"
    android:id="@+id/quizLinearLayout"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/primary_text_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/question"
        android:id="@+id/questionNumberTextView"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/flagImageView"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:longClickable="false"
        android:cropToPadding="false"
        android:src="@drawable/usflag"
        android:layout_gravity="center"
        android:contextClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/guess_country"
        android:id="@+id/guessCountryTextView"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1LinearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/row2LinearLayout"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button3"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button4"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/row3LinearLayout"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button5"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button6"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/row4LinearLayout"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button7"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button8"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            style="@android:style/Widget.Material.Button.Colored" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/answerTextView"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
